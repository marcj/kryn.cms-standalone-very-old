<?xml version="1.0"?>
<config>
    <bundle>

        <objects>

            <object id="File">
                <label>File</label>
                <class>Admin\ObjectFile</class>
                <table>system_file</table>
                <labelField>path</labelField>

                <nestedLabel>name</nestedLabel>
                <nested>true</nested>
                <treeIcon>extension</treeIcon>
                <treeIconMapping>
                    <icon id="directory">#icon-folder-4</icon>
                </treeIconMapping>

                <treeDefaultIcon>#icon-paper</treeDefaultIcon>
                <browserInterfaceClass>ka.Files</browserInterfaceClass>
                <browserInterface>custom</browserInterface>

                <browserOptions>
                    <field id="onlyUserDefined">
                        <label>Only user defined files</label>
                        <type>checkbox</type>
                    </field>
                    <field id="search">
                        <label>Enable search</label>
                        <type>checkbox</type>
                    </field>
                    <field id="path">
                        <label>Start path</label>
                        <type>folder</type>
                    </field>
                    <field id="selectionOnlyFolders">
                        <label>Only folders</label>
                        <type>checkbox</type>
                    </field>
                    <field id="selectionOnlyFiles">
                        <label>Only files</label>
                        <type>checkbox</type>
                    </field>
                    <field id="onlyLocal">
                        <label>Only local files</label>
                        <type>checkbox</type>
                        <desc>Exclude all external files in magic folders</desc>
                    </field>
                    <field id="returnPath">
                        <label>Return path</label>
                        <type>checkbox</type>
                        <desc>Instead of returning the object id</desc>
                    </field>
                </browserOptions>
                <fields>
                    <field id="id" primaryKey="true" autoIncrement="true">
                        <label>ID</label>
                        <type>number</type>
                    </field>
                    <field id="path">
                        <label>Path</label>
                        <type>text</type>
                    </field>
                    <field id="name">
                        <label>Name</label>
                        <type>text</type>
                    </field>
                    <field id="type">
                        <label>Type</label>
                        <items>
                            <item id="dir">Directory</item>
                            <item id="file">File</item>
                        </items>
                        <type>select</type>
                    </field>
                    <field id="size">
                        <label>Size</label>
                        <type>number</type>
                        <desc>In bytes</desc>
                    </field>
                    <field id="ctime">
                        <label>Created</label>
                        <type>datetime</type>
                    </field>
                    <field id="mtime">
                        <label>Modified</label>
                        <type>datetime</type>
                    </field>
                </fields>
            </object>
            <object id="Node">
                <label>Node</label>
                <desc>Pages, Links, Deposits and Navigation folder</desc>
                <table>system_node</table>
                <labelField>title</labelField>
                <defaultSelection>type, title, alternativeTitle, urn, layout, visible, target</defaultSelection>
                <publicUrlGenerator>Core\PageController::getPublicUrl</publicUrlGenerator>

                <nested>true</nested>
                <nestedRootObject>core\Domain</nestedRootObject>
                <nestedRootObjectField>domainId</nestedRootObjectField>
                <nestedRootObjectLabelField>domain</nestedRootObjectLabelField>
                <nestedRootObjectExtraFields></nestedRootObjectExtraFields>
                <nestedRootAsObject>true</nestedRootAsObject>

                <treeInterfaceClass>ka.NodeTree</treeInterfaceClass>
                <treeInterface>custom</treeInterface>
                <treeFields>type, title, accessDenied, accessFromGroups, visible</treeFields>
                <treeIcon>type</treeIcon>
                <treeRootObjectIconPath>#world</treeRootObjectIconPath>
                <treeRootObjectFixedIcon>true</treeRootObjectFixedIcon>
                <treeRootFieldTemplate>{domain}</treeRootFieldTemplate>

                <fields>
                    <field id="id" primaryKey="true" autoIncrement="true">
                        <label>ID</label>
                        <type>number</type>
                    </field>
                    <field id="pid">
                        <label>Parent ID</label>
                        <type>number</type>
                    </field>
                    <field id="domainId">
                        <label>Domain ID</label>
                        <type>number</type>
                    </field>
                    <field id="type">
                        <label>Type</label>
                        <type>number</type>
                    </field>
                    <field id="title">
                        <label>Title</label>
                        <type>text</type>
                    </field>
                    <field id="alternativeTitle">
                        <label>Page title</label>
                        <type>text</type>
                    </field>
                    <field id="urn" required="true">
                        <label>URN</label>
                        <type>text</type>
                    </field>
                    <field id="link">
                        <label>Link</label>
                        <type>text</type>
                    </field>
                    <field id="lft">
                        <type>number</type>
                        <primaryKey>0</primaryKey>
                    </field>
                    <field id="rgt">
                        <type>number</type>
                        <primaryKey>0</primaryKey>
                    </field>
                    <field id="target">
                        <label>Link target</label>
                        <type>text</type>
                    </field>
                    <field id="visible">
                        <label>Visible in navigation</label>
                        <type>checkbox</type>
                    </field>
                    <field id="accessDenied">
                        <label>Access denied</label>
                        <type>checkbox</type>
                        <desc>For everyone. This remove the page from the navigation.</desc>
                    </field>
                    <field id="meta">
                        <label>Meta tags</label>
                        <type>text</type>
                    </field>
                    <field id="forceHttps">
                        <label>Force HTTPS</label>
                        <type>checkbox</type>
                    </field>
                    <field id="accessFrom">
                        <type>datetime</type>
                    </field>
                    <field id="accessTo">
                        <type>datetime</type>
                    </field>
                    <field id="accessRedirectTo">
                        <type>page</type>
                    </field>
                    <field id="accessNohidenavi">
                        <type>checkbox</type>
                    </field>
                    <field id="accessNeedVia">
                        <type>number</type>
                    </field>
                    <field id="accessFromGroups">
                        <type>text</type>
                    </field>
                    <field id="searchWords">
                        <type>text</type>
                    </field>
                    <field id="unsearchable">
                        <type>checkbox</type>
                    </field>
                </fields>
            </object>
            <object id="Domain">
                <label>Domain</label>
                <table>system_domain</table>
                <labelField>domain</labelField>
                <labelTemplate>[{lang}] {domain}</labelTemplate>
                <defaultSelection>domain, lang</defaultSelection>
                <fields>
                    <field id="id" primaryKey="true" autoIncrement="true">
                        <label>ID</label>
                        <type>number</type>
                    </field>
                    <field id="domain">
                        <label>Domain name</label>
                        <type>text</type>
                    </field>
                    <field id="lang">
                        <label>Language</label>
                        <type>lang</type>
                    </field>
                    <field id="master">
                        <label>Language master</label>
                        <type>checkbox</type>
                    </field>
                </fields>
            </object>
            <object id="Language">
                <label>Language</label>
                <table>system_langs</table>
                <labelField>title</labelField>
                <labelTemplate>{title} ({langtitle}, {code})</labelTemplate>
                <defaultSelection>title, langtitle, code</defaultSelection>
                <limitDataSets>visible</limitDataSets>
                <limitDataSets>=</limitDataSets>
                <limitDataSets>true</limitDataSets>
                <fields>
                    <field id="code" primaryKey="true">
                        <type>text</type>
                    </field>
                    <field id="title">
                        <type>text</type>
                    </field>
                    <field id="langtitle">
                        <type>text</type>
                    </field>
                    <field id="userdefined">
                        <type>checkbox</type>
                    </field>
                    <field id="visible">
                        <type>checkbox</type>
                    </field>
                </fields>
            </object>
            <object id="Workspace">
                <label>Workspace</label>
                <table>system_workspace</table>
                <fields>
                    <field id="id">
                        <type>number</type>
                        <primaryKey>true</primaryKey>
                        <autoIncrement>true</autoIncrement>
                    </field>
                    <field id="title">
                        <label>Title</label>
                        <type>text</type>
                    </field>
                    <field id="ownerId">
                        <object>Users\User</object>
                        <objectLabel>name</objectLabel>
                        <objectRelation>nTo1</objectRelation>
                        <objectRelationName>owner</objectRelationName>
                        <type>object</type>
                    </field>
                    <field id="created">
                        <type>datetime</type>
                    </field>
                </fields>
            </object>
            <object id="EntryPoint">
                <class>\Admin\ObjectEntryPoint</class>
                <labelField>title</labelField>
                <nested>true</nested>
                <dataModel>custom</dataModel>
                <fields>
                    <field id="path" primaryKey="true">
                        <type>text</type>
                    </field>
                    <field id="title">
                        <type>text</type>
                    </field>
                    <field id="type">
                        <type>text</type>
                    </field>
                </fields>
            </object>
            <object id="Content">
                <label>Node Content</label>
                <table>system_content</table>
                <labelField>id</labelField>
                <defaultSelection>nodeId,boxId,template,type,content</defaultSelection>
                <fields>
                    <field id="id" primaryKey="true" autoIncrement="true">
                        <label>ID</label>
                        <type>number</type>
                    </field>
                    <field id="nodeId">
                        <label>Node</label>
                        <object>Core\Node</object>
                        <objectLabel>title</objectLabel>
                        <objectRelation>nTo1</objectRelation>
                        <type>object</type>
                    </field>
                    <field id="boxId">
                        <type>number</type>
                    </field>
                    <field id="sortableId">
                        <type>number</type>
                    </field>
                    <field id="title">
                        <type>text</type>
                    </field>
                    <field id="content">
                        <type>textarea</type>
                    </field>
                    <field id="template">
                        <type>text</type>
                    </field>
                    <field id="type">
                        <type>text</type>
                    </field>
                    <field id="hide">
                        <type>checkbox</type>
                    </field>
                    <field id="unsearchable">
                        <type>text</type>
                    </field>
                </fields>
            </object>
            <object id="View">
                <label>Template View</label>
                <desc>Template views</desc>
                <labelField>name</labelField>
                <nested>true</nested>
                <dataModel>custom</dataModel>
                <class>\Admin\ObjectView</class>
                <fields>
                    <field id="path" primaryKey="true">
                        <label>Path</label>
                        <type>text</type>
                    </field>
                    <field id="name">
                        <label>File name</label>
                        <type>text</type>
                    </field>
                </fields>
            </object>
        </objects>

    </bundle>
</config>